        "@typescript-eslint/parser": "^5.9.0",
        "eslint": "^8.6.0",
        "jest": "^27.4.7",
        "supertest": "^6.2.2"
    },
    "include": [
        "src/",
        "../global/",
        ".env"
    ],
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "moduleNameMapper": {
            "@classes/(.*)": "<rootDir>/build/classes/$1",
            "@config/(.*)": "<rootDir>/build/config/$1",
            "@schemas/(.*)": "<rootDir>/build/schemas/$1"
        }
    }
}
